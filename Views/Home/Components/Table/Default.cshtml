@using lr9.Models
@model List<TableItem>

<style>
    table {
        width: 100%
    }

    thead {
        font-weight: 600;
    }

    tr {
        border-bottom: 1px solid lightgray;
        min-height: 50px
    }

    th {
        min-width: 100px
    }
</style>

<table>
    <caption></caption>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>